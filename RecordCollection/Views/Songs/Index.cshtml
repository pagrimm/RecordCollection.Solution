@{
  Layout = "_Layout";
}

@using RecordCollection.Models;
@model IEnumerable<RecordCollection.Models.Song>;

@if (Model.Count() == 0)
{
  <p>There are no songs to display, please add a song.</p>
}

<ul>
@foreach(Song song in Model)
{
  <li>@Html.ActionLink($"{song.Name}", "Details", new {id = song.SongId})</li>
}
</ul>

<p>@Html.ActionLink("Add new Song", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>